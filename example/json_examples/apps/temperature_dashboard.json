{
  "type": "page",
  "title": "Temperature Dashboard",
  "content": {
    "type": "column",
    "children": [
      {
        "type": "card",
        "child": {
          "type": "padding",
          "child": {
            "type": "column",
            "children": [
              {
                "type": "text",
                "value": "Current Temperature",
                "style": {
                  "fontSize": 18.0,
                  "color": "#666666"
                }
              },
              {
                "type": "sizedbox",
                "height": 8.0
              },
              {
                "type": "text",
                "value": "{{temperature}}Â°C",
                "style": {
                  "fontSize": 48.0,
                  "fontWeight": "bold",
                  "color": "#1976D2"
                }
              }
            ],
            "mainAxisAlignment": "start",
            "crossAxisAlignment": "center",
            "mainAxisSize": "max"
          },
          "padding": {
            "all": 16.0
          }
        },
        "elevation": 2.0
      },
      {
        "type": "sizedbox",
        "height": 20.0
      },
      {
        "type": "row",
        "children": [
          {
            "type": "button",
            "label": "Subscribe",
            "onTap": {
              "type": "resource",
              "action": "subscribe",
              "uri": "data://temperature",
              "binding": "temperature"
            },
            "style": "elevated",
            "icon": "notifications",
            "disabled": false
          },
          {
            "type": "sizedbox",
            "width": 10.0
          },
          {
            "type": "button",
            "label": "Unsubscribe",
            "onTap": {
              "type": "resource",
              "action": "unsubscribe",
              "uri": "data://temperature"
            },
            "style": "outlined",
            "disabled": false
          }
        ],
        "mainAxisAlignment": "center",
        "crossAxisAlignment": "center",
        "mainAxisSize": "max"
      }
    ],
    "mainAxisAlignment": "start",
    "crossAxisAlignment": "center",
    "mainAxisSize": "max"
  },
  "state": {
    "initial": {
      "temperature": 20.0
    }
  },
  "lifecycle": {
    "onInit": [
      {
        "type": "resource",
        "action": "subscribe",
        "uri": "data://temperature",
        "binding": "temperature"
      }
    ],
    "onDestroy": [
      {
        "type": "resource",
        "action": "unsubscribe",
        "uri": "data://temperature"
      }
    ]
  }
}